extends layout

block header
  li.brand LESS2CSS
  li.divider-vertical
  li: label(for='lessVersion') Choose a LESS version:
  li
    select#lessVersion.lessVersion
      option(selected='selected') 1.3.3
      option 1.3.2
      option 1.3.1
      option 1.3.0
      option 1.2.2
      option 1.2.1
      option 1.2.0
      option 1.1.6
      option 1.1.5
      option 1.1.4
      option 1.1.3
      option 1.1.2
      option 1.1.1
      option 1.1.0
  li: img#loadingGif.loadingGif(src='/images/loading.gif', alt='Loading...')

block content
  div.row-fluid
    div.span6
      h2 LESS Input
      div.codeWrap
        textarea#lessInput.lessInput(placeholder="Input your LESS here.")
          | .transition(@transition) {
          |   -webkit-transition: @transition;
          |      -moz-transition: @transition;
          |        -o-transition: @transition;
          |           transition: @transition;
          | }
          | .opacity(@opacity) {
          |   opacity: @opacity / 100;
          |   filter: ~"alpha(opacity=@{opacity})";
          | }

          | a {
          |   .transition(all 0.4s);
          |   &:hover {
          |     .opacity(70);
          |   }
          | }

          | @theGoodThings: ~".food, .beer, .ladies, .sleep, .javascript";

          | @{theGoodThings} {
          |   font-weight: bold;
          | }

    div.span6
      h2 CSS Output
      article
        pre.preWrap
          code#cssOutput.cssOutput.css